            <string>{
    draw_set_font(font0);
    draw_set_color(c_red);
    draw_text(10,10,"Shader Demo3:  Passing variables into a shader");
    
    
    if( shader_is_compiled(sShaderDemo3) )
    {    
        shader_set(sShaderDemo3);
    
        step = (room_width-100)/5;
        x = 100;
        shader_set_uniform_f(channel_mask, 1,0,0,1);            // red
        draw_sprite(sprite_index,image_index,x, y);
        x+=step;
        
        shader_set_uniform_f(channel_mask, 0,1,0,1);            // green
        draw_sprite(sprite_index,image_index,x, y);
        x+=step;
        
        shader_set_uniform_f(channel_mask, 0,0,1,1);            // blue
        draw_sprite(sprite_index,image_index,x, y);
        x+=step;
    
        shader_set_uniform_f(channel_mask, 1,1,0,1);            // red+green
        draw_sprite(sprite_index,image_index,x, y);
        x+=step;
        
        shader_set_uniform_f(channel_mask, 1,0,1,1);            // red+blue
        draw_sprite(sprite_index,image_index,x, y);
        x+=step;
    
        // Now draw a "wacky" one, with variable channel mask values....    
        var ss,cc,tt;
        ss = sin(s);
        cc = cos(c);
        tt = tan(t);
        s=s+0.1;
        if( s&gt;2 ) s=0;
        c=c+0.01;
        if( c&gt;2 ) c=0;
        t=t+0.1;
        if( t&gt;2 ) t=0;
            
        shader_set_uniform_f(channel_mask, ss,cc,tt,1);            
        draw_sprite(sprite_index,image_index, 100+(step*2), 300);
        
                
        shader_reset();
    }else{
        draw_text(10,40,"sShaderDemo3 did not compile");
    }
    
    
}
</string>
